<div id="<%= dom_id post %>" class="p-5 shadow rounded col-6">
  <h3 class="text-center mb-4 text-muted">
    <%= post.title %>
  </h3>

  <p>
    <strong>Body:</strong><br>
    <small>
      <%= post.body %>
    </small>
  </p>

  <p>
    <strong>Published:</strong><br>
    <small>
      <%= post.published %>
    </small>
  </p>
</div>
